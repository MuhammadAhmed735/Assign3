<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:padding="10dp"
    android:layout_marginTop="25dp"
    android:background="@color/themeColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/header_profilePic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"

        android:src="@drawable/ic_person_image_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:tint="#FFFFFF" />
    <TextView
        android:id="@+id/header_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/abeezee"
        android:textSize="18sp"
        android:textStyle="bold"

        android:text="Muhammad Ahmed"

        app:layout_constraintTop_toTopOf="@+id/header_profilePic"
        app:layout_constraintStart_toEndOf="@id/header_profilePic"
        />
    <TextView
        android:id="@+id/header_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_displayName"
        app:layout_constraintStart_toStartOf="@id/header_displayName"
        android:text="Ahmed735"
        android:fontFamily="@font/abeezee"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/white"


        />

</androidx.constraintlayout.widget.ConstraintLayout>